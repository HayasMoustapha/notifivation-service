# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_notifications
DB_USER=postgres
DB_PASSWORD=postgres

# Database Bootstrap - Enable automatic database creation and migrations
DB_AUTO_BOOTSTRAP=true

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3000
AUTH_SERVICE_TOKEN=your_auth_service_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_for_validation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=3

# Email Configuration (SMTP - Primary)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (Fallback)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@eventplanner.com
FROM_NAME=Event Planner

# SMS Configuration (Twilio - Primary)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Vonage Configuration (SMS Fallback)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM_NUMBER=EventPlanner

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379/4
QUEUE_DEFAULT_JOB_OPTIONS_REMOVE_ON_COMPLETE=10
QUEUE_CONCURRENCY_EMAIL=5
QUEUE_CONCURRENCY_SMS=3
QUEUE_CONCURRENCY_BULK=2

# Template Configuration
TEMPLATES_PATH=./src/core/templates
EMAIL_TEMPLATES_PATH=./src/core/templates/email
SMS_TEMPLATES_PATH=./src/core/templates/sms

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EMAIL_RATE_LIMIT=10_PER_MINUTE
SMS_RATE_LIMIT=5_PER_MINUTE

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Security
API_KEY=your_notification_service_api_key
WEBHOOK_SECRET=your_webhook_secret

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9092

# Notification Settings
DEFAULT_EMAIL_TTL=3600
DEFAULT_SMS_TTL=1800
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_BASE=2000
BATCH_MAX_SIZE=1000
BATCH_CHUNK_SIZE=100
